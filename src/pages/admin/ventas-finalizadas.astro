---
import Layout from '../../layouts/Layout.astro';
import ListaVentasFinalizadas from '../../components/VentasFinalizadas';
import GestionOfertas from '../../components/GestionOfertas';
import ResumenVentasDiarias from '../../components/ResumenVentasDiarias';
---

<Layout title="Panel de Administración">
  <main class="container mx-auto px-0 py-0 md:px-4 md:py-8">
    <div class="flex justify-between items-center mb-6 ">
      <h1 class="text-3xl font-bold text-white">Panel de Administración</h1>
      <a href="/ofertas/ofertas" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded ml-4">
        Volver a Ofertas
      </a>
    </div>
    <div class="flex flex-wrap -mx-2">
      <div class="w-full md:w-1/3 px-2 mb-4">
        <button id="toggleOfertas" class="bg-gray-500 text-white px-4 py-2 w-full md:w-3/3 rounded text-2xl font-bold mb-4 h1responsivetext">
          Gestión de Ofertas
        </button>
        <div id="gestionOfertas" class="max-h-[60vh] md:max-h-max overflow-y-auto" >
          <GestionOfertas client:load />
        </div>
      </div>
    <div  class="w-full md:w-1/3 px-2 mb-4">
      <button id="toggleResumen" class="bg-gray-500 text-white px-4 py-2 w-full md:w-3/3 rounded text-2xl font-bold mb-4 h1responsivetext">Resumen Ventas</button>
      <div id="resumenVentas" class="max-h-[60vh] md:max-h-max overflow-y-auto">
        <ResumenVentasDiarias client:load />
      </div>
    </div>
    <div class="w-full md:w-1/3 px-2 mb-4">
      <button id="toggleVentasFinalizadas" class="bg-gray-500 text-white px-4 py-2 w-full md:w-3/3 rounded text-2xl font-bold mb-4 h1responsivetext">Ventas Finalizadas</button>
      <div id="ventasFinalizadas"  class="max-h-[60vh] md:max-h-max overflow-y-auto">
        <ListaVentasFinalizadas client:load updateFlag={true} isOffline={false}/>
      </div>
    </div>
  </main>
</Layout>

<!-- Script para manejar la visibilidad de los componentes -->
<script is:inline>
  function toggleVisibility(buttonId, contentId) {
    const button = document.getElementById(buttonId);
    const content = document.getElementById(contentId);
    
    button.addEventListener("click", () => {
      content.classList.toggle("hidden");
      button.textContent = content.classList.contains("hidden") 
        ? button.textContent.replace("Ocultar", "Mostrar") 
        : button.textContent.replace("Mostrar", "Ocultar");
    });
  }

  toggleVisibility("toggleOfertas", "gestionOfertas");
  toggleVisibility("toggleResumen", "resumenVentas");
  toggleVisibility("toggleVentasFinalizadas", "ventasFinalizadas");
</script>

<script>
import { isLoggedIn } from "../../lib/supabaseseguridad";

  try {
    // Verificar si el usuario está logueado
    if (!isLoggedIn()) {
      window.location.href = "/";
    } else {
      // Obtener el usuario almacenado en localStorage
      const user = localStorage.getItem("user");

      // Validar si el usuario existe y si tiene la propiedad "es_admin"
      if (user) {
        const parsedUser = JSON.parse(user);

        // Verificar si el usuario es administrador
        if (!parsedUser.es_admin) {
          window.location.href = '/';
        }
      } else {
        // Si no hay usuario en localStorage, redirigir a login
        window.location.href = "/";
      }
    }
  } catch (error) {
    console.debug("Error durante la verificación de autenticación:", error);
  }
</script>
